                    placeholder="{{ 'general.popup.email_placeholder' | t }}">
                  <button class="Form__Submit Button Button--primary Button--full flex items-center" type="submit">{{ 'general.popup.submit' | t }} {% render 'icon' with 'right-arrow' %}</button>
                </div>
              {%- endif -%}
